{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["src/**"],
		"ignoreUnknown": false
	},
	"formatter": {
		"includes": ["src/**"],
		"enabled": true,
		"indentStyle": "tab",
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noSolidDestructuredProps": "error"
			},
			"recommended": false
		}
	},
	"javascript": {
		"formatter": {
			"enabled": false
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
